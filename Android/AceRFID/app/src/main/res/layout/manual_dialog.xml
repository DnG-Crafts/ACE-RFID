<?xml version="1.0" encoding="utf-8"?>
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F4F4F4"
        android:fillViewport="true"
        android:fitsSystemWindows="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/eframe"
            android:maxWidth="500dp"
            android:layout_gravity="center|fill_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btnfmt"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="28dp"
                android:importantForAccessibility="no"
                app:layout_constraintEnd_toEndOf="@+id/txtbedmax"
                app:layout_constraintTop_toBottomOf="@+id/txtbedmax"
                app:srcCompat="@drawable/twotone_layers_clear_24"
                app:tint="#1976D2" />

            <ImageView
                android:id="@+id/btnrst"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="25dp"
                android:importantForAccessibility="no"
                app:layout_constraintStart_toStartOf="@+id/txtbedmax"
                app:layout_constraintTop_toBottomOf="@+id/txtbedmax"
                app:srcCompat="@drawable/twotone_restart_alt_24"
                app:tint="#1976D2" />

            <Button
                android:id="@+id/btnread"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="51dp"
                android:padding="14dp"
                android:text="@string/read"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btnwrite"
                app:layout_constraintStart_toEndOf="@+id/btncls"
                app:layout_constraintTop_toBottomOf="@+id/btnfmt" />

            <Button
                android:id="@+id/btnwrite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="51dp"
                android:padding="14dp"
                android:text="@string/write"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btnread"
                app:layout_constraintTop_toBottomOf="@+id/btnfmt" />

            <Button
                android:id="@+id/btncls"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="51dp"
                android:padding="14dp"
                android:text="@string/close"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btnread"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnfmt" />



            <EditText
                android:id="@+id/txtsku"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext"
                android:ems="10"
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:maxLength="20"
                android:padding="10dp"
                android:layout_marginTop="50dp"
                android:text=""
                android:textIsSelectable="false"
                android:autofillHints=""
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:inputType="textNoSuggestions"
                android:textColor="@color/text_color"
                app:layout_constraintBottom_toTopOf="@+id/txtbrand"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/lblsku"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/txtbrand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/edittext"
                android:ems="10"
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:maxLength="20"
                android:padding="10dp"
                android:text=""
                android:autofillHints=""
                android:textIsSelectable="false"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:inputType="textNoSuggestions"
                android:textColor="@color/text_color"
                app:layout_constraintBottom_toTopOf="@+id/txttype"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/lblbrand"
                app:layout_constraintTop_toBottomOf="@+id/txtsku" />

            <EditText
                android:id="@+id/txttype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/edittext"
                android:ems="10"
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:maxLength="20"
                android:padding="10dp"
                android:text=""
                android:autofillHints=""
                android:textIsSelectable="false"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:inputType="textNoSuggestions|textCapCharacters"
                android:textColor="@color/text_color"
                app:layout_constraintBottom_toTopOf="@+id/txtcolor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/lbltype"
                app:layout_constraintTop_toBottomOf="@+id/txtbrand" />

            <EditText
                android:id="@+id/txtcolor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/edittext"
                android:ems="10"
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:maxLength="8"
                android:padding="10dp"
                android:text=""
                android:autofillHints=""
                android:textIsSelectable="false"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:digits="0123456789ABCDEF"
                android:inputType="textNoSuggestions|textCapCharacters"
                android:textColor="@color/text_color"
                app:layout_constraintBottom_toTopOf="@+id/txtlength"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/lblcolor"
                app:layout_constraintTop_toBottomOf="@+id/txttype" />

            <EditText
                android:id="@+id/txtlength"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/edittext"
                android:ems="10"
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:maxLength="4"
                android:padding="10dp"
                android:text=""
                android:autofillHints=""
                android:textIsSelectable="false"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:digits="0123456789"
                android:inputType="textNoSuggestions|textCapCharacters"
                android:textColor="@color/text_color"
                app:layout_constraintBottom_toTopOf="@+id/txtdiam"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/lbllength"
                app:layout_constraintTop_toBottomOf="@+id/txtcolor" />

            <EditText
                android:id="@+id/txtdiam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/edittext"
                android:digits="0123456789."
                android:ems="10"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:imeOptions="actionDone"
                android:inputType="textNoSuggestions|textCapCharacters"
                android:maxLength="4"
                android:padding="10dp"
                android:singleLine="true"
                android:text=""
                android:autofillHints=""
                android:textIsSelectable="false"
                android:textColor="@color/text_color"
                app:layout_constraintBottom_toTopOf="@+id/txtextmin"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/lbldiam"
                app:layout_constraintTop_toBottomOf="@+id/txtlength" />


            <EditText
                android:id="@+id/txtextmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/edittext"
                android:ems="10"
                android:digits="0123456789"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:imeOptions="actionDone"
                android:inputType="textNoSuggestions|textCapCharacters"
                android:maxLength="3"
                android:padding="10dp"
                android:singleLine="true"
                android:text=""
                android:autofillHints=""
                android:textIsSelectable="false"
                android:textColor="@color/text_color"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/lblextmin"
                app:layout_constraintTop_toBottomOf="@+id/txtdiam" />

            <EditText
                android:id="@+id/txtextmax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/edittext"
                android:digits="0123456789"
                android:ems="10"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:imeOptions="actionDone"
                android:inputType="textNoSuggestions|textCapCharacters"
                android:maxLength="3"
                android:padding="10dp"
                android:singleLine="true"
                android:text=""
                android:autofillHints=""
                android:textIsSelectable="false"
                android:textColor="@color/text_color"
                app:layout_constraintBottom_toTopOf="@+id/txtbedmin"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/lblextmax"
                app:layout_constraintTop_toBottomOf="@+id/txtextmin" />

            <EditText
                android:id="@+id/txtbedmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/edittext"
                android:digits="0123456789"
                android:ems="10"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:imeOptions="actionDone"
                android:inputType="textNoSuggestions|textCapCharacters"
                android:maxLength="3"
                android:padding="10dp"
                android:singleLine="true"
                android:text=""
                android:autofillHints=""
                android:textIsSelectable="false"
                android:textColor="@color/text_color"
                app:layout_constraintBottom_toTopOf="@+id/txtbedmax"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/lblbedmin"
                app:layout_constraintTop_toBottomOf="@+id/txtextmax" />

            <EditText
                android:id="@+id/txtbedmax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/edittext"
                android:digits="0123456789"
                android:ems="10"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:imeOptions="actionDone"
                android:inputType="textNoSuggestions|textCapCharacters"
                android:maxLength="3"
                android:padding="10dp"
                android:singleLine="true"
                android:text=""
                android:autofillHints=""
                android:textIsSelectable="false"
                android:textColor="@color/text_color"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/lblbedmax"
                app:layout_constraintTop_toBottomOf="@+id/txtbedmin" />

            <TextView
                android:id="@+id/lblsku"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:text="SKU"
                android:textAlignment="textEnd"
                android:textColor="@color/text_color"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/lblbrand"
                app:layout_constraintEnd_toStartOf="@+id/txtsku"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/lblbrand"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:text="Brand"
                android:textAlignment="textEnd"
                android:textColor="@color/text_color"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/lbltype"
                app:layout_constraintEnd_toStartOf="@+id/txtbrand"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lblsku" />

            <TextView
                android:id="@+id/lbltype"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:text="Type"
                android:textAlignment="textEnd"
                android:textColor="@color/text_color"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/lblcolor"
                app:layout_constraintEnd_toStartOf="@+id/txttype"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lblbrand" />

            <TextView
                android:id="@+id/lblcolor"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:text="@string/color"
                android:textAlignment="textEnd"
                android:textColor="@color/text_color"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/lbllength"
                app:layout_constraintEnd_toStartOf="@+id/txtcolor"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lbltype" />

            <TextView
                android:id="@+id/lbllength"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:text="Length:"
                android:textAlignment="textEnd"
                android:textColor="@color/text_color"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/lbldiam"
                app:layout_constraintEnd_toStartOf="@+id/txtlength"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lblcolor" />

            <TextView
                android:id="@+id/lbldiam"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:text="Diameter:"
                android:textAlignment="textEnd"
                android:textColor="@color/text_color"
                android:textSize="18sp"

                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/lblextmin"
                app:layout_constraintEnd_toStartOf="@+id/txtdiam"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lbllength" />


            <TextView
                android:id="@+id/lblextmin"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:text="Ext Min"

                android:textAlignment="textEnd"
                android:textColor="@color/text_color"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/lblextmax"
                app:layout_constraintEnd_toStartOf="@+id/txtextmin"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lbldiam" />

            <TextView
                android:id="@+id/lblextmax"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:text="Ext Max"

                android:textAlignment="textEnd"
                android:textColor="@color/text_color"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/lblbedmin"
                app:layout_constraintEnd_toStartOf="@+id/txtextmax"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lblextmin" />

            <TextView
                android:id="@+id/lblbedmin"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:text="Bed Min"

                android:textAlignment="textEnd"
                android:textColor="@color/text_color"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/lblbedmax"
                app:layout_constraintEnd_toStartOf="@+id/txtbedmin"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lblextmax" />

            <TextView
                android:id="@+id/lblbedmax"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:text="Bed Max"
                android:textAlignment="textEnd"

                android:textColor="@color/text_color"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/txtbedmax"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lblbedmin" />

            <ImageView
                android:id="@+id/btncol"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="5dp"
                android:importantForAccessibility="no"
                app:layout_constraintEnd_toEndOf="@+id/txtcolor"
                app:layout_constraintTop_toTopOf="@+id/txtcolor"
                app:srcCompat="@drawable/twotone_palette_24"
                app:tint="#1976D2" />

        </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>