<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:fillViewport="true"
    android:background="#F4F4F4">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|fill_vertical"
        android:padding="16dp"
        android:maxWidth="500dp"
        android:clipChildren="false"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/rgbSliders"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/rounded_card_background"
            android:clipChildren="false"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_constraintBottom_toTopOf="@+id/presetColors"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/red"
                android:textColor="#374151"
                android:textSize="16sp" />

            <SeekBar
                android:id="@+id/redSlider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:max="255"
                android:progress="0"
                android:progressTint="#EF4444"
                android:thumbTint="#EF4444" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/green"
                android:textColor="#374151"
                android:textSize="16sp" />

            <SeekBar
                android:id="@+id/greenSlider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:max="255"
                android:progress="0"
                android:progressTint="#22C55E"
                android:thumbTint="#22C55E" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/blue"
                android:textColor="#374151"
                android:textSize="16sp" />

            <SeekBar
                android:id="@+id/blueSlider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:max="255"
                android:progress="255"
                android:progressTint="#3B82F6"
                android:thumbTint="#3B82F6" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/alpha"
                android:textColor="#374151"
                android:textSize="16sp" />

            <SeekBar
                android:id="@+id/alphaSlider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:max="255"
                android:progress="255"
                android:progressTint="#9CA3AF"
                android:thumbTint="#9CA3AF" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/presetColors"
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:maxHeight="500dp"
            android:minHeight="300dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/rounded_card_background"
            android:clipChildren="false"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_constraintBottom_toTopOf="@+id/colorDisplayArea"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rgbSliders">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical">

                <androidx.gridlayout.widget.GridLayout
                    android:id="@+id/presetColorGrid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    app:alignmentMode="alignBounds"
                    app:columnCount="5"
                    app:columnOrderPreserved="false"
                    app:rowCount="6"
                    app:useDefaultMargins="false"/>

            </androidx.core.widget.NestedScrollView>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/colorDisplayArea"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_card_background"
            android:clipChildren="false"
            android:orientation="horizontal"
            android:padding="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/presetColors">



            <FrameLayout
                android:id="@+id/colorDisplayFrame"
                android:layout_width="180dp"
                android:layout_marginStart="10dp"
                android:layout_height="60dp"
                android:layout_gravity="start"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/titleTextView">

                <View
                    android:id="@+id/colorDisplay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FF0000FF" />

                <TextView
                    android:id="@+id/txtcolor"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:text=""
                    android:textColor="@android:color/white"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:fontFamily="monospace"
                    android:shadowColor="#80000000"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2" />
            </FrameLayout>

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btncls"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:padding="14dp"
                android:text="@string/select"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/dcolorview"
                app:layout_constraintTop_toTopOf="@+id/dcolorview" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>